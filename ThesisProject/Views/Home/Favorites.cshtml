@model List<SongModel>

@section Styles{

    <link rel="stylesheet" href="~/css/MenuStyle.css" />
    <link rel="stylesheet" href="~/css/PlaylistsStyle.css" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

}


<!--Side Menu-->
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <!--<img src="logo.png" alt="">-->
                </span>
                <div class="text logo-text">
                    <span class="name">Musification</span>
                    <span class="profession"><i>You</i> choose</span>
                </div>
            </div>
            <i class='bx bx-chevron-right toggle'></i>
        </header>
        <div class="menu-bar">
            <div class="menu">
                
                <ul class="menu-links">
                    <li class="nav-link">
                        <a class="homebtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-route-profile="@ViewBag.ProfileImage" asp-action="Homepage">
                            <i class='bx bx-home-alt icon'></i>
                            <span class="text nav-text">Homepage</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="favbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-route-profile="@ViewBag.ProfileImage" asp-action="Favorites">
                            <i class='bx bx-heart icon'></i>
                            <span class="text nav-text">Favorites</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="moodbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-route-profile="@ViewBag.ProfileImage" asp-action="Moods">
                            <i class='bx bx-happy-alt icon'></i>
                            <span class="text nav-text">Moods</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-route-profile="@ViewBag.ProfileImage" asp-action="Profile">
                            <i class='bx bx-male icon'></i>
                            <span class="text nav-text">Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="bottom-content">
                <li class="">
                    <a class="logoutbtn" asp-controller="Home" asp-action="Login">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>
              

            </div>
        </div>
    </nav>

    <!--Main Section-->
    <section class="home">

        <div class="header">
            <div class="text title">Your favorites</div>
            <div class="right-corner">
                <img class="profile-pic" src="@ViewBag.ProfileImage"></img>
                <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-route-profile="@ViewBag.ProfileImage" asp-action="Profile">
                    <span class="smalltext username ">@ViewBag.username</span>
                </a>
            </div>
        </div>
        <div class="main">
            <div class="song-list">

                <audio class="audio" id="audioplayer">
                </audio>

                <table>
                    @if (Model.Count() != 0)
                    {
                        <thead>
                            <tr>

                                <td></td>
                                <td class="sname h  text">Song</td>
                                <td class="artist h text">Artist</td>
                                <td class="duration  h text">Duration</td>
                                <td></td>
                            </tr>

                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr class="song">
                                <td>
                                    <span class="play-icon ">
                                        <button type="submit" data-song-id="@item.songId" data-username="@ViewBag.username" data-profile="@ViewBag.ProfileImage" data-file="@item.songfile" class="play-btn">
                                            <i class='bx bx-play bx-flip-vertical buttons icon ' style="display:inline-block"></i>
                                            <i class='bx bx-pause buttons icon' style="display:none"></i>
                                        </button>
                                    </span>                              
                                </td>

                                <td class="sname text">@item.songname</td>
                                <td class="artist text">@item.artist</td>
                                <td class="duration text">@item.duration</td>                                                               
                                <td>
                                    <form asp-controller="Home" asp-action="Unlike" asp-route-username="@ViewBag.Username" asp-route-profile="@ViewBag.ProfileImage" method="post" class="like-btn">
                                            <input type="hidden" name="username" value="@ViewBag.username" />
                                            <input type="hidden" name="mood" value="@item.mood" />
                                            <input type="hidden" name="songid" value="@item.songId" />
                                            <input type="hidden" name="isliked" value="@true" />
                                            <button type="submit" class="heart">
                                                <i class='bx bxs-heart icon buttons '></i>
                                            </button>
                                        </form>
                                </td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>You haven't liked any songs!</tr>
                    }

                </table>
            </div>
        </div>

        <!--<div class="song-managing">

            <div class="buttons">
                <i class='bx bx-skip-previous'></i>
                <i class='bx bx-pause pause' onclick="Hide()"></i>
                <i class='bx bx-play bx-flip-vertical play' onclick="Hide()"></i>
                <i class='bx bx-skip-next'></i>
            </div>
        </div>-->
        

    </section>


    <!--Javascripts-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        
        $(document).ready(function () {
            $('.play-btn').click(function () {
                var songId = $(this).data('song-id');
                var username = $(this).data('username');
                var file = $(this).data('file');
                var playIcon = $(this).find('.bx-play');
                var pauseIcon = $(this).find('.bx-pause');

                $.ajax({
                    url: '@Url.Action("HearingCounter", "Home")',
                    type: 'POST',
                    data: { songId: songId, username: username },
                    // Perform an AJAX POST request to the 'PlaySong' action in the 'Songs' controller
                    // The 'songId' parameter is sent in the request data

                    success: function (result) {

                        var audioPlayer = document.getElementById('audioplayer');

                        if (!audioPlayer.paused) {
                            audioPlayer.pause();
                            pauseIcon.toggle();
                            playIcon.toggle();
                        }
                        else if (audioPlayer.paused) {
                            audioPlayer.src = file;
                            audioPlayer.play();
                            pauseIcon.toggle();
                            playIcon.toggle();
                        }

                        console.log('Song played successfully.');
                    },
                    error: function () {

                        console.log('An error occurred while playing the song.');

                    }
                });
            });
        });

