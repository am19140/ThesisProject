@model List<SongModel>

@section Styles{

    <link rel="stylesheet" href="~/css/MenuStyle.css" />
    <link rel="stylesheet" href="~/css/PlaylistsStyle.css" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

}


<!--Side Menu-->
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <!--<img src="logo.png" alt="">-->
                </span>
                <div class="text logo-text">
                    <span class="name">Musification</span>
                    <span class="profession"><i>You</i> choose</span>
                </div>
            </div>
            <i class='bx bx-chevron-right toggle'></i>
        </header>
        <div class="menu-bar">
            <div class="menu">
                <li class="search-box">
                    <i class='bx bx-search icon'></i>
                    <input type="text" placeholder="Search...">
                </li>
                <ul class="menu-links">
                    <li class="nav-link">
                        <a class="homebtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Homepage">
                            <i class='bx bx-home-alt icon'></i>
                            <span class="text nav-text">Homepage</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="favbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Favorites">
                            <i class='bx bx-heart icon'></i>
                            <span class="text nav-text">Favorites</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="moodbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Moods">
                            <i class='bx bx-happy-alt icon'></i>
                            <span class="text nav-text">Moods</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Profile">
                            <i class='bx bx-male icon'></i>
                            <span class="text nav-text">Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="bottom-content">
                <li class="">
                    <a class="logoutbtn" asp-controller="Home" asp-action="Login">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>
                <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-moon icon moon'></i>
                        <i class='bx bx-sun icon sun'></i>
                    </div>
                    <span class="mode-text text">Dark mode</span>
                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li>

            </div>
        </div>
    </nav>

    <!--Main Section-->
    <section class="home">

        <div class="header">
            <div class="text title">Your favorites</div>
            <div class="right-corner">
                <img src="~/Resources/icons8-male-user-24 (1).png" />
                <div class="smalltext username ">@ViewBag.username </div>
            </div>
        </div>
        <div class="main">
            <div class="song-list">

                <audio class="audio" id="audioplayer">
                </audio>

                <table>
                    @if (Model.Count() != 0)
                    {
                        <thead>
                            <tr>

                                <td></td>
                                <td class="sname h  text">Song</td>
                                <td class="artist h text">Artist</td>
                                <td class="duration  h text">Duration</td>
                                <td></td>
                            </tr>

                        </thead>
                        @foreach (var item in Model)
                        {

                            <tr class="song">

                                <td>
                                    <span class="play-icon " onclick="playAudio('@item.songfile',this)">
                                        <i class='bx bx-play bx-flip-vertical buttons' style="display:inline-block"></i>
                                        <i class='bx bx-pause' style="display:none"></i>
                                    </span>
                                    <span class="pause-icon hidden" onclick="playAudio('@item.songfile',this)">

                                    </span>
                                </td>

                                <td class="sname text">@item.songname</td>
                                <td class="artist text">@item.artist</td>
                                <td class="duration text">@item.duration</td>                                                               
                                <td>
                                        <form asp-controller="Home" asp-action="Unlike" asp-route-username="@ViewBag.Username" method="post" class="like-btn">
                                            <input type="hidden" name="username" value="@ViewBag.username" />
                                            <input type="hidden" name="mood" value="@item.mood" />
                                            <input type="hidden" name="songid" value="@item.songId" />
                                            <input type="hidden" name="isliked" value="@true" />
                                            <button type="submit" class="heart">
                                                <i class='bx bxs-heart icon buttons '></i>
                                            </button>
                                        </form>
                                </td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>You haven't liked any songs!</tr>
                    }

                </table>
            </div>
        </div>


        <div class="song-managing">

            <div class="buttons">
                <i class='bx bx-skip-previous'></i>
                <i class='bx bx-pause pause' onclick="Hide()"></i>
                <i class='bx bx-play bx-flip-vertical play' onclick="Hide()"></i>
                <i class='bx bx-skip-next'></i>
            </div>
        </div>

    </section>


